<html>
    <body>
        <form action="/insertCourse" method="POST">
        <input type="text" id="courseName" name="courseName" placeholder="Enter Course Name:">
        <input type="submit" value="submit">
        </form>
    </body>

    <br>
    <br>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th> Course Id</th>
                <th> Course Name</th>
                <th> Instructor</th>
                <th> Delete</th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach(function(course){ %>
            <tr>
                <td><%= course.id %></td>
                <td><%= course.courseName %></td>
                <td>
                    <form method="POST" action="/updatePart/<%= part.id %>/<%= part.partName %>/<%= part.qoh %>">
                        <button class="btn btn-primary">Add Instructor</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>


</html>