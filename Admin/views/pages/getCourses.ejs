<style>
    table,
    th,
    td {
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
    }
  
    table {
        margin: 5px auto;
    }
  
    form {
        display: inline-block;
    }
  
    h4 {
        text-align: center;
    }
  
    .container {
        margin-top: 15px;
    }
  </style>
  
  <div class="container">
    <h4>Course Table</h4>
    <br>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th> Course Id</th>
                <th> Course Name</th>
                <th> Total Seats</th>
                <th> Available Seats</th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach(function(course){ %>
            <tr>
                <td><%= course.id %></td>
                <td><%= course.courseName %></td>
                <td><%= course.totalSeats %></td>
                <td><%= course.availableSeats %></td>
                <td>
                    <form method="POST" action="/assignInstructorForm/<%= course.id %>/<%= course.courseName %>">
                        <button class="btn btn-primary disable">Assign Instructor</button>
                    </form>
                  <form method="POST" action="/updateCourseForm/<%= course.id %>/<%= course.courseName %>/<%= course.totalSeats %>">
                    <button class="btn btn-primary disable">Update</button>
                </form>
                  <form method="POST" action="/deleteCourse/<%= course.id %>"> 
                        <button class="btn btn-primary">delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
  </div>
  </body>
   